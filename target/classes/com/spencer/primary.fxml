<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="com.spencer.PrimaryController">
    <VBox alignment="CENTER_LEFT" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label text="Network Adapter List">
            <font>
                <Font name="Noto Sans CJK SC Black" size="16.0"/>
            </font>
        </Label>
        <ListView fx:id="deviceListView" prefHeight="418.0" prefWidth="160.0"/>
    </VBox>
    <VBox minWidth="200.0" prefHeight="200.0" prefWidth="400.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="360.0" text="Device"
               textAlignment="CENTER">
            <font>
                <Font name="Noto Sans CJK SC Black" size="16.0"/>
            </font>
        </Label>
        <Label fx:id="selectedDeviceLabel" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="270.0"
               prefWidth="360.0" wrapText="true">
            <VBox.margin>
                <Insets top="100.0"/>
            </VBox.margin>
            <font>
                <Font name="Noto Sans CJK SC Regular" size="13.0"/>
            </font>
        </Label>
        <Button fx:id="primaryButton" alignment="CENTER" onAction="#switchToSecondary" prefHeight="27.0"
                prefWidth="360.0" text="Start sniffing!" textAlignment="CENTER">
            <font>
                <Font name="Noto Sans CJK SC Regular" size="13.0"/>
            </font>
        </Button>
    </VBox>
</HBox>
