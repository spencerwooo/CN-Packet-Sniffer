<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="com.spencer.PrimaryController">
    <VBox alignment="CENTER_LEFT" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label text="Network Adapter List">
            <font>
                <Font name="Noto Sans CJK SC Black" size="16.0"/>
            </font>
        </Label>
        <ListView fx:id="deviceListView" prefHeight="418.0" prefWidth="160.0"/>
    </VBox>
    <VBox minWidth="200.0" prefHeight="200.0" prefWidth="400.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="360.0" text="Device" textAlignment="CENTER">
            <font>
                <Font name="Noto Sans CJK SC Black" size="16.0"/>
            </font>
        </Label>
        <HBox prefHeight="17.0" prefWidth="360.0">
            <Label prefHeight="17.0" prefWidth="80.0" text="Name"/>
            <Label fx:id="deviceNameLabel" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="290.0"
                   wrapText="true"/>
        </HBox>
        <HBox layoutX="30.0" layoutY="76.0" prefHeight="17.0" prefWidth="360.0">
            <Label prefHeight="17.0" prefWidth="80.0" text="Description"/>
            <Label fx:id="deviceDescriptionLabel" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="290.0"
                   wrapText="true"/>
        </HBox>
        <HBox layoutX="30.0" layoutY="76.0" prefHeight="90.0" prefWidth="360.0">
            <Label prefHeight="17.0" prefWidth="80.0" text="Address"/>
            <Label fx:id="deviceAddressLabel" alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="90.0"
                   prefWidth="283.0" wrapText="true"/>
        </HBox>
        <HBox layoutX="30.0" layoutY="150.0" prefHeight="36.0" prefWidth="360.0">
            <Label prefHeight="36.0" prefWidth="73.0" text="Link Layer Address" wrapText="true"/>
            <Label fx:id="deviceLinkLayerAddressLabel" alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0"
                   prefHeight="36.0" prefWidth="290.0" wrapText="true"/>
        </HBox>
        <HBox layoutX="30.0" layoutY="76.0" prefHeight="17.0" prefWidth="360.0">
            <Label prefHeight="17.0" prefWidth="80.0" text="LoopBack"/>
            <Label fx:id="deviceLoopBackLabel" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="290.0"/>
        </HBox>
        <HBox layoutX="30.0" layoutY="113.0" prefHeight="17.0" prefWidth="360.0">
            <Label prefHeight="17.0" prefWidth="80.0" text="Up"/>
            <Label fx:id="deviceUpLabel" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="290.0"
                   wrapText="true"/>
        </HBox>
        <HBox layoutX="30.0" layoutY="311.0" prefHeight="17.0" prefWidth="360.0">
            <Label prefHeight="17.0" prefWidth="80.0" text="Running"/>
            <Label fx:id="deviceRunningLabel" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="290.0"
                   wrapText="true"/>
        </HBox>
        <HBox layoutX="30.0" layoutY="348.0" prefHeight="17.0" prefWidth="360.0">
            <Label prefHeight="17.0" prefWidth="80.0" text="Local"/>
            <Label fx:id="deviceLocalLabel" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="290.0"
                   wrapText="true"/>
        </HBox>
        <Button fx:id="primaryButton" alignment="CENTER" onAction="#switchToSecondary" prefHeight="27.0"
                prefWidth="360.0" text="Start sniffing!" textAlignment="CENTER">
            <font>
                <Font name="Noto Sans CJK SC Regular" size="13.0"/>
            </font>
        </Button>
    </VBox>
</HBox>
